<p id="notice"><%= notice %></p>

<div class="card" id="notescard">

  <div class="leftsideimage">
  </div>

  <div class="rightsideimage">
    <div class="card">
      <div class="card-image waves-effect waves-block waves-light">
        <!-- <img class="activator" src="background.jpg"> -->
        <p>
          <strong>Semester:</strong>
          <%= @material.semester %>
        </p>

        <p>
          <strong>Branch:</strong>
          <%= @material.branch %>
        </p>

        <p>
          <strong>Subject:</strong>
          <%= @material.subject %>
        </p>

        <p>
          <strong>Category:</strong>
          <%= @material.category %>
        </p>

        <p>
          <strong>Title:</strong>
          <%= @material.title %>
        </p>

        <p>
          <strong>AddedBy:</strong>
          <%= @material.user_id %>
        </p>

      </div>
      <div class="card-content">
        <span class="card-title activator red-text text-darken-4">Preview</span>
        <p><%= link_to 'Edit', edit_material_path(@material) %></p>
        <p><%= link_to 'Back', materials_path %></p>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">Notes Preview<i class="material-icons right">close</i></span>
        <p>
          <strong>File:</strong>
          <iframe src="/uploadedfiles/<%= @material.file %>" width="100%" height="500" > </iframe>

        </p>
      </div>
      </div>
      </div>
    </div>
