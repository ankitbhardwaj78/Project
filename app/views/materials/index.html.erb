<% @materials.each do |material| %>

<div class="row" id="materialcard">
  <div class="col s12">
    <div class="card #F5F2ED">
      <div class="card-content white-text">
        <div class="contentheader">      
          <span class="card-title"><%= material.subject %></span>
          <%unless current_user%>
          <span><%=link_to 'Rate This',new_user_session_path%></span>
          <%end%>
        </div>
        <h3>Added By:<%= material.user_id %></h3>
        <h3>Rating  : <%= rating_for material, 'rating',disable_after_rate: true, imdb_avg: true ,cancel_place: 'right',cancel_hint: 'Cancel this vote!',half_show: true%></h3>
        <div class="information">
          <div class="informationunit">
            <span class="heading">Title</span> 
            <span class="detailing"><%= material.title %></span>
          </div>
          <div class="informationunit">
            <span class="heading">Semester</span> 
            <span class="detailing"><%= material.semester %></span>
          </div>
          <div class="informationunit">
            <span class="heading">Branch</span> 
            <span class="detailing"><%= material.branch %></span>
          </div>
        </div>
      </div>
      <div class="card-action">
       <%= link_to 'Show', material %>
       <%= link_to 'Download', download_materials_path(material,id:material.id) %>
     </div>
   </div>
 </div>
</div>

<br>
<%end%>



