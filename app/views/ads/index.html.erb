<p id="notice"><%= notice %></p>
<%= link_to 'New Ad' , new_ad_path,class: "waves-effect waves-light btn" %>

<h2>All Ads</h2>


    <% @ads.each do |ad| %>

      <div class="row">
        <div class="col s9 ">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= ad.title %></span>
              <p><%= ad.description %></p>
              <p>Posted By : <%= User.find_by_id(ad.user_id).username %></p>
            </div>
            <div class="card-action">
              <%= link_to 'Show', ad %>
              <!--<a href="#">This is a link</a>-->
            </div>
          </div>
        </div>
      </div>


    <% end %>


<br>


