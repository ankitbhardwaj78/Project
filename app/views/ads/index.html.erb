<p id="notice"><%= notice %></p>
<% unless current_user%> 
  <h1>New Add</h1>
<%end%>
<%if current_user%>
<a class="waves-effect waves-light btn" href="#modal1" id="centre">New Ad</a>
<div id="modal1" class="modal">
  <div class="modal-content">
   <h2>New Material</h2>
   <div class="row">
  <%= form_for(@ad) do |f| %>

  <% if @ad.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

    <ul>
      <% @ad.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="row" id="form">
    <div class="input-field col s12">
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_field :description %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s6">
      <%= f.label :contact %><br>
      <%= f.text_field :contact %>
    </div>
    <div class="input-field col s6">
      <%= f.label :college %><br>
      <%= f.text_field :college %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s6">
      <%= f.label :branch %><br>
      <%= f.text_field :branch %>
    </div>
    <div class="input-field col s6">
      <%= f.label :semester %><br>
      <%= f.text_field :semester %>
    </div>
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  
  <div class="waves-effect waves-light btn">
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
  
  <% end %>
</div>




 </div>
</div>
<%end%>
<h2>All Ads</h2>


<% @ads.each do |ad| %>

<div class="row">
  <div class="col s9 ">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= ad.title %></span>
        <p><%= ad.description %></p>
        <p>Posted By : <%= User.find_by_id(ad.user_id).username %></p>
      </div>
      <div class="card-action">
        <%= link_to 'Show', ad %>
        <!--<a href="#">This is a link</a>-->
      </div>
    </div>
  </div>
</div>


<% end %>


