
<div class="row">
  <%= form_for(@ad) do |f| %>

  <% if @ad.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

    <ul>
      <% @ad.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="row">
    <div class="input-field col s12">
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_field :description %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s6">
      <%= f.label :contact %><br>
      <%= f.text_field :contact %>
    </div>
    <div class="input-field col s6">
      <%= f.label :college %><br>
      <%= f.text_field :college %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s6">
      <%= f.label :branch %><br>
      <%= f.text_field :branch %>
    </div>
    <div class="input-field col s6">
      <%= f.label :semester %><br>
      <%= f.text_field :semester %>
    </div>
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  
  <div class="waves-effect waves-light btn">
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
  
  <% end %>
</div>



