
<div id="index-banner" class="parallax-container" style="background: url(background.gif); background-size: cover;">
  <div class="section no-pad-bot" >
    <div class="container">
      <br><br>
      <h1 class="header center teal-text text-lighten-2">Project Name</h1>
      <div class="row center">
        <h5 class="header col s12 light white-text">A portal for all kinds of books, notes, question papers and more...</h5>
      </div>
      <div class="row center">
        <% if user_signed_in? %>
                  <a class="waves-effect waves-light btn">WELCOME, <%= current_user.username %></a>

        <% end %>
        <% unless user_signed_in? %>
        <!-- Modal Trigger -->
        <a class="waves-effect waves-light btn" href="#modal1">Login</a>

        <!-- Modal Structure login-->
        <div id="modal1" class="modal">
          <div class="modal-content">
           <h2>Log in</h2>

           <%= form_for @user, :as => :user, :url => new_user_session_path(@user) do |f| %>
           <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>


          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
          <% end %>
          <%= link_to "Forgot your password?", new_password_path(@user) %><br />
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(@user) %><br />

        </div>
        <div class="modal-footer">
          <%= link_to "Sign up", new_user_registration_path(@user) %><br />
        </div>
        <% end %>

      </div>

    </div>
    <br><br>

  </div>
</div>
